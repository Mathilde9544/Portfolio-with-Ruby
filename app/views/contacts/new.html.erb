<div class="form-container">
  <div class="form">
    <h2 class="form-title">Leave me your message!</h2>
    <%= form_with model: @contact, url: contact_path, method: :post, local: true, data: { controller: "message", action: "submit->message#sendEmail" } do |form| %>
      <%= form.text_field :name, placeholder: "Name", required: true, class: "form-field", data: { message_target: "name "} %>
      <%= form.text_field :company, placeholder: "Company (optional)", required: false, class: "form-field", data: { message_target: "company "} %>
      <%= form.text_field :email, placeholder: "example@email.com", required: true, class: "form-field", data: { message_target: "email "} %>
      <%= form.text_area :message, placeholder: "Your message here!", required: true, class: "form-field", id: "message-field", data: { message_target: "textmessage "} %>
      <%= form.submit "Send message", class: "form-field", id: "submit-btn" %>
    <% end %>
  </div>
</div>
